<div class="container-fluid">
    <div class="row">

        <div class="col-lg-3">
            <%- include('../navigation.ejs') -%>
        </div>

        <div class="col-lg-9">

            <h2 class="mt-3 mb-2">Products List</h2>

            <div class="text-end">
                <a href="/admin/products/item/add" class="btn btn-primary">Add New Product</a>
            </div>


            <table class="table">

                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Price</th>
                    </tr>
                </thead>

                <tbody>
                    <% for (let product of products) { %>
                        <tr>
                            <td>
                                <img src="<%= product.images[0].name %>" width="100"  alt="<%= product.name %>">
                            </td>
                            <td><%= product.name %></td>
                            <td>$<%= product.price %></td>
                        </tr>
                    <% } %>
                </tbody>
            </table>

            <div class="d-flex justify-content-center mt-3">
                <nav>
                    <ul class="pagination">
                        <li class="page-item">
                            <a href="/admin/products/<%= previousPage %>" class="page-link">Previous</a>
                        </li>
                        <% for(let page = 1; page <= pages; page++ ) { %>
                            <% if(page === currentPage){ %>
                                <li class="page-item">
                                    <a href="#" class="page-link active"><%= page %></a>
                                </li>
                            <% } else { %>
                                <li class="page-item">
                                    <a href="#" class="page-link"><%= page %></a>
                                </li>
                            <% } %>
                        <% } %>
                        <li class="page-item">
                            <a href="/admin/products/<%= nextPage %>" class="page-link">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>