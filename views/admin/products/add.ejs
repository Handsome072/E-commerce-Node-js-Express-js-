<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3">
            <%- include('../navigation.ejs') -%>
        </div>
        <div class="col-lg-9">
            <div class="row">
                <div class="col-lg-8 offset-lg-2">
                    <h1>Add New Product</h1>
                    <form action="" method="POST" enctype="multipart/form-data">
                        <% if(error != '') { %>
                            <div class="alert alert-danger"><%= error %></div>
                        <% } %>
                        <div class="mt-3">
                            <label for="name">Name: </label>
                            <input type="text" name="name" id="name" class="form-control">
                        </div>
                        <div class="mt-3">
                            <label for="price">Price:</label>
                            <input type="number" name="price" id="name" class="form-control">
                        </div>
                        <div class="mt-3">
                            <label for="quantity">Quantity: </label>
                            <input type="number" name="quantity" class="form-control">
                        </div>
                        <div class="mt-3">
                            <label for="images"> Images</label>
                            <input type="file" multiple required class="form-control" name="images" accept="image/*">
                        </div>
                        <div class="mt-3">
                            <label for="description">Description :</label>
                            <textarea name="content" id="description" class="form-control" rows="10"></textarea>
                        </div>
                        <div class="mt-3">
                            <label for="category">Choose Category: </label>
                            <select name="category" id="category" class="form-control">
                                <% for(let category of categories) { %>
                                    <option value="<%= category.category_id %>"><%= category.name %></option>
                                <% } %>
                            </select>
                        </div>
                        <div class="mt-3 mb-5">
                            <button type="submit" class="btn btn-primary form-control">Save Product</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>